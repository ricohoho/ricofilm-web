extends layout

block content
  //h2= title
  // Wrapper
  #wrapper

    // SEARCH USER
    #searchFilm
      fieldset
        input#inputFilm(type='text', placeholder='Film' onkeydown ='if (event.keyCode == 13) document.getElementById(\'btnSearchFilm\').click()')
        button#btnSearchFilm() Recherche
        button#btnNext() +
        button#btnPrev() -
    // /SEARCH USER

    // FILM LIST
    h5#liste_resultat Liste :
    #filmList
      table
        thead
          th Titre (titre FR)
          th Date de sortie
          th Detail
        tbody
    // /FILM LIST


    // FILM INFO
    #filmInfo
      h2 RicoFilm
      p
        strong Titre:
        |  <span id='filmInfoOriginal_title'></span>
        br
        strong Date de sortie:
        |  <span id='filmInfoRelease_date'></span>
        br
        strong Date Rico:
        |  <span id='filmInfo_Rico_fileDate'></span>
        br
        |  <img id='filmInfoPoster_path'   width="180"></img>
        br
        strong Synosis:
        |  <span id='filmInfoOverview'></span>
        br
        strong Popularité:
        |  <span id='filmInfoPopularity'></span>

    // /FILM INFO

    //
    #filmDetail
      #myModal.modal-content
        #modal-header.modal-header
          h5#XfilmInfoOriginal_title Titre
          #container-fluid
            span.close &times;
            a#XNextFilm(href="#").close +
            a#XPrevFilm(href="#").close -
        #modal-body.modal-body
          p
            strong Titre (fr):
            |  <span id='XfilmInfoTitle'></span>
            br
            strong Metteur en scene:
            |  <a href="#" class="linkshowfilm"  id='XfilmInfoCrew_Name0'></a>
            br
            strong Synosis:
            |  <span id='XfilmInfoOverview'></span>
            br
            strong Popularité:
            |  <span id='XfilmInfoPopularity'></span>
            table
              tbody
                tr
                  td
                    |  <img id='XfilmInfoPoster_path'   width="180"></img>
                  td.filmdetail
                      table
                        tbody
                          tr
                            td(colspan = "3")
                              strong Genre :
                              |  <span id='XfilmInfoGenre'>Coucocu</span>
                              br
                              strong pays :
                              | <span id='XfilmInfoProduction_country'></span>
                          tr
                            td
                              #filmCastList
                                table
                                  tbody



        #modal-footer.modal-footer
          #container-fluid
            h5#XfilmInfoRICO_path Modal Footer
    // /DETAIL

  // /WRAPPER
