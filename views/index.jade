extends layout

block content
  //h2= title
  // Wrapper
  #wrapper

    // SEARCH USER
    #searchFilm
      fieldset
        input#inputFilm(type='text', placeholder='Film' onkeydown ='if (event.keyCode == 13) document.getElementById(\'btnSearchFilm\').click()')
        button#btnSearchFilm() Recherche
        button#btnNext() +
        button#btnPrev() -
    // /SEARCH USER

    // FILM LIST
    h5#liste_resultat Liste :
    #filmList
      table
        thead
          th Titre (titre FR) 
            a#tri_original_title(href="#").sortClass (-)
          th Date de sortie
            a#tri_release_date(href="#").sortClass (-)
          th Date Rico
            a#tri_UPDATE_DB_DATE(href="#").sortClass (-)
          th Detail
        tbody
    // /FILM LIST


    // FILM INFO
    #filmInfo
      h2 RicoFilm
      p
        strong Titre:
        |  <span id='filmInfoOriginal_title'></span><img id='filmInfo_Rico_StatusFichier'   width="10"></img>
        br
        strong Date de sortie:
        |  <span id='filmInfoRelease_date'></span>
        br
        strong Date Rico:
        |  <span id='filmInfoUPDATE_DB_DATE'></span>
        br
        |  <img id='filmInfoPoster_path'   width="180"></img>
        br
        strong Synosis:
        |  <span id='filmInfoOverview'></span>
        br
        strong Popularité:
        |  <span id='filmInfoPopularity'></span>

    // /FILM INFO
    //
    #filmDetail
      #myModal.modal-content
        #modal-header.modal-header
          h5#XfilmInfoOriginal_title Titre
          #container-fluid
            span.close &times;
            a#XNextFilm(href="#").close +
            a#XPrevFilm(href="#").close -
        #modal-body.modal-body
          p
            strong Titre (fr):
            |  <span id='XfilmInfoTitle'></span>
            br
            strong Metteur en scene:
            |  <a href="#" class="linkshowfilm"  id='XfilmInfoCrew_Name0'></a>
            br
            strong Synosis:
            |  <span id='XfilmInfoOverview'></span>
            br
            strong Popularité:
            |  <span id='XfilmInfoPopularity'></span><A id='XmovieDBURL'> MovieDB </A> 
            table
              tbody
                tr
                  td
                    |  <img id='XfilmInfoPoster_path'   width="180"></img>
                  td.filmdetail
                      table
                        tbody
                          tr
                            td(colspan = "3")
                              strong Genre :
                              |  <span id='XfilmInfoGenre'>Coucocu</span>
                              br
                              strong pays :
                              | <span id='XfilmInfoProduction_country'></span>
                          tr
                            td
                              #filmCastList
                                table
                                  tbody



        #modal-footer.modal-footer
          #container-fluid
                // FILM RICO FILE
                #filmRico_file
                  table
                    thead
                      th serveur
                      th Dossier
                      th FIchier
                      th Taille
                    tbody
                // /FILM RICO FILE

    // /DETAIL


    // /Request INFO + REQUEST
    //
    #requestDetail
      #myModal2.modal-content
        #modal-header.modal-header
          h5#XfilmInfoOriginalRequest_title Titre
          #container-fluid
            span.close2 &times;
        #modal-body-request.modal-body-request
          p
            strong Titre (fr) :
            |  <span id='XRequestfilmInfoTitle'></span>
          P
            strong Fichier :
            |  <span id='XRequestRICO_file'></span>
            |  ( Taille  <span id='XRequestRICO_size'></span>)
            br


            // FILM RICO FILE
            #filmRico_file
              table
                thead
                  th x
                  th Dossier
                  th FIchier
                  th Taille
                tbody
            // /FILM RICO FILE

            #addRequest
              fieldset
                input#inputUserName(type='text', placeholder='Username')
                input#inputId(type='hidden')
                input#inputTitle(type='hidden')                
                input#inputFileServeur(type='hidden')
                input#inputPath(type='hidden')
                input#inputFile(type='hidden')
                input#inputSize(type='hidden')
                input#inputFileDate(type='hidden')
                button#btnAddRequest Add Demande

  // /WRAPPER
